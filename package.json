{
  "private": true,
  "name": "stylelint.io",
  "homepage": "http://stylelint.io/",
  "description": "A mighty, modern CSS linter that helps you enforce consistent conventions and avoid errors in your stylesheets.",
  "googleAnalyticsUA": "UA-72480048-1",
  "scripts": {
    "copy-stylelint-docs": "babel-node ./scripts/copy-stylelint-docs",
    "process-stylelint-docs": "babel-node ./scripts/process-stylelint-docs",
    "stylelint-docs": "npm run copy-stylelint-docs && npm run process-stylelint-docs",
    "lint": "eslint --ignore-path .gitignore . && stylelint web_modules/**/*.css",
    "pretest": "npm run lint",
    "test": "npm run build",
    "statinamic": "cross-env BABEL_ENV=statinamic DEBUG=statinamic:* babel-node scripts/build",
    "prebuild": "npm run stylelint-docs",
    "build": "npm run statinamic -- --static --production",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist -r https://github.com/stylelint/stylelint.github.io.git -b master",
    "prestart": "npm run stylelint-docs",
    "start": "npm run statinamic -- --server --open --dev"
  },
  "statinamic": {
    "assets": false,
    "CNAME": true
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ],
    "env": {
      "statinamic": {
        "plugins": [
          [
            "babel-plugin-webpack-loaders",
            {
              "config": "./scripts/webpack.config.babel.js",
              "verbose": false
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "rule-properties-order": "alphabetical"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^4.1.8",
    "babel-loader": "^6.2.2",
    "babel-plugin-webpack-loaders": "^0.3.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-preset-stage-1": "^6.5.0",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.3",
    "eslint-config-i-am-meticulous": "^2.0.0",
    "eslint-loader": "^1.2.1",
    "eslint-plugin-react": "^3.16.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "fs-extra": "^0.26.5",
    "gh-pages": "^0.10.0",
    "glob": "^7.0.0",
    "highlight.js": "^9.1.0",
    "invariant": "^2.2.0",
    "json-loader": "^0.5.4",
    "markdown-it": "^5.1.0",
    "markdown-it-toc-and-anchor": "^1.0.1",
    "postcss-browser-reporter": "^0.4.0",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^0.8.1",
    "postcss-reporter": "^1.3.1",
    "raw-loader": "^0.5.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-google-analytics": "^0.2.0",
    "react-helmet": "^2.3.1",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
    "react-svg-inline": "^1.0.1",
    "redux": "^3.3.1",
    "redux-devtools": "^3.1.1",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.4",
    "redux-thunk": "^1.0.3",
    "statinamic": "^0.7.0",
    "style-loader": "^0.13.0",
    "stylelint": "^4.3.6",
    "stylelint-config-standard": "^3.0.0",
    "webpack": "^1.12.13",
    "whatwg-fetch": "^0.9.0"
  }
}
